<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/llTopBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            app:srcCompat="@drawable/ic_close_grey_700_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivBack"
            android:text="Filter"
            android:textColor="@color/font_black_0"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnApply"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@color/colorPrimary"
            android:text="APPLY"
            android:textColor="@color/white" />
    </RelativeLayout>

    <View
        android:id="@+id/vw_divider"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/llTopBar"
        android:background="@color/font_black_5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vw_divider"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.7">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <RadioButton
                    android:id="@+id/rbStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:padding="12dp"
                    android:text="Style"
                    android:textAllCaps="false"
                    android:textColor="@drawable/radio_text_selector_red"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/vwStyle"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/font_black_5" />

                <RadioButton
                    android:id="@+id/rbSubStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:button="@null"
                    android:padding="12dp"
                    android:paddingLeft="4dp"
                    android:text="Sub Style"
                    android:textAllCaps="false"
                    android:textColor="@drawable/radio_text_selector_red"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/vwSubStyle"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/font_black_5" />

                <RadioButton
                    android:id="@+id/rbCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:button="@null"
                    android:padding="12dp"
                    android:paddingLeft="4dp"
                    android:text="Category"
                    android:textAllCaps="false"
                    android:textColor="@drawable/radio_text_selector_red"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/vwCategory"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/font_black_5" />

                <RadioButton
                    android:id="@+id/rbPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:button="@null"
                    android:padding="12dp"
                    android:paddingLeft="4dp"
                    android:text="Price"
                    android:textAllCaps="false"
                    android:textColor="@drawable/radio_text_selector_red"
                    android:textSize="16sp" />
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/font_black_5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.3"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="12dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSubStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/rgPricing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/rbDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Default" />

                <RadioButton
                    android:id="@+id/rbLowToHigh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Low to High" />

                <RadioButton
                    android:id="@+id/rbHighToLow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High to Low" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>